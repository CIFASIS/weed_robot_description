<?xml version="1.0"?>
<launch>

<arg name="meshes" default="true"/>
<arg name="config" default="normal"/>

<!-- carga el robot en param robot_description -->
<param name="robot_description" 
    command="$(find xacro)/xacro --inorder '$(find weed_robot_description)/urdf/weed_robot.xacro' 
      meshes:=$(arg meshes)"/>

<!-- publica el estado de todos los joints no fijos del robot -->
<node name="joint_state_publisher" pkg="joint_state_publisher_gui" 
    type="joint_state_publisher_gui"/>

<!-- publica tf para visualizar en rviz -->
<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>

<!-- lanza rviz -->
<node name="rviz" pkg="rviz" type="rviz" 
    args="-d $(find weed_robot_description)/rviz/$(arg config).rviz"/>

</launch>