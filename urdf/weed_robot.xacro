    </material>
  </visual>
</gazebo>
<joint name="base_fork_fl_joint" type="revolute">
  <parent link="base_link"/>
  <child link="fork_fl_link"/>
  <origin rpy="0 0 0" xyz="0.791 0.527 -0.292"/>
  <axis xyz="0 0 1"/>
  <limit lower="${-25/180*pi}" upper="${36/180*pi}" effort="1000" velocity="0.01"/>
</joint>

